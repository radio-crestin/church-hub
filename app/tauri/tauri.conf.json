{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "church-hub",
  "version": "0.1.0",
  "identifier": "com.church-hub",
  "build": {
    "devUrl": "http://localhost:8086",
    "beforeDevCommand": "bun run --filter client dev",
    "beforeBuildCommand": "bun build:apps",
    "frontendDist": "../apps/client/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Church Hub",
        "width": 1200,
        "height": 800,
        "maximized": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: http://asset.localhost asset: https://asset.localhost blob: data:; style-src 'unsafe-inline' 'self'; connect-src 'self' http://localhost:* ws://localhost:* ipc: http://ipc.localhost ipc: https://ipc.localhost;",
      "dangerousDisableAssetCspModification": ["style-src"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": ["./bin/church-hub-sidecar"],
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
