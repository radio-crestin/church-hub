{
  "name": "church-hub",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "tauri dev",
    "dev:worktree": "tauri dev --config tauri/tauri.worktree.conf.json",
    "dev:web": "concurrently --kill-others --names server,client \"bun run --filter server dev\" \"bun run --filter client dev\"",
    "dev:apps": "concurrently -k -n server,client -c blue,green npm:dev:server npm:dev:client",
    "dev:server": "bun run --filter server dev",
    "dev:client": "bun run --filter client dev",
    "lint": "biome check ./apps",
    "lint:fix": "biome check ./apps --write",
    "test": "bun run test:unit && bun run test:server",
    "test:unit": "bun run --filter client test",
    "test:server": "bun run --filter server test",
    "test:e2e": "bun run --filter client test:e2e",
    "test:all": "bun run test && bun run test:e2e",
    "tauri:build": "tauri build",
    "tauri:build:debug": "tauri build --debug",
    "build:apps": "bun run --filter client build && bun run --filter server compile",
    "tsc:check": "tsc --noEmit --skipLibCheck",
    "fixtures": "bun run apps/server/src/db/fixtures/dump-fixtures.ts",
    "ios:init": "tauri ios init",
    "ios:dev": "tauri ios dev",
    "ios:dev:device": "tauri ios dev --open",
    "ios:open": "open tauri/gen/apple/church-hub.xcodeproj",
    "ios:build": "tauri ios build -d",
    "ios:build:release": "tauri ios build",
    "ios:install": "xcrun devicectl device install app --device A0B78F24-E37A-5781-A622-4C1933760D99 tauri/gen/apple/build/arm64/church-hub.ipa",
    "ios:launch": "xcrun devicectl device process launch --device A0B78F24-E37A-5781-A622-4C1933760D99 com.church-hub",
    "ios:run": "pnpm ios:build && pnpm ios:install && pnpm ios:launch",
    "ios:run:release": "pnpm ios:build:release && pnpm ios:install && pnpm ios:launch",
    "setup:libmpv": "node scripts/setup-libmpv.js",
    "postinstall": "npm run setup:libmpv"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@playwright/test": "^1.58.0",
    "@tauri-apps/cli": "^2.9.3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "bun-types": "^1.3.1",
    "client": "workspace:*",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "husky": "^8.0.1",
    "typescript": "^5.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,jsx,tsx}": [
      "biome check --write"
    ]
  },
  "dependencies": {
    "reveal.js": "^5.2.1",
    "tauri-plugin-libmpv-api": "^0.3"
  }
}
