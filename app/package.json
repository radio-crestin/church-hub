{
  "name": "church-hub",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "tauri dev",
    "dev:web": "concurrently --kill-others \"bun run --filter server dev\" \"bun run --filter client dev\"",
    "lint": "biome check ./apps",
    "lint:fix": "biome check ./apps --write",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:build:debug": "tauri build --debug",
    "build:apps": "bun run --filter client build && bun run --filter server compile",
    "tsc:check": "tsc --noEmit --skipLibCheck"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@tauri-apps/cli": "^2.9.3",
    "bun-types": "^1.3.1",
    "concurrently": "^9.2.1",
    "husky": "^8.0.1",
    "typescript": "^5.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,jsx,tsx}": [
      "biome check --write"
    ]
  },
  "dependencies": {
    "reveal.js": "^5.2.1"
  }
}
